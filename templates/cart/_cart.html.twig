{% block body %}

    {% if outfit | length > 0 %}
        <table class="table mt-5">
            <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Total</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for item in outfit %}
                <tr>
                    <th>{{ item.outfit.description }}</th>
                    <th>{{ item.outfit.price }}€</th>
                    <th>{{ item.quantity }}</th>
                    <th>{{ item.outfit.price * item.quantity }}€</th>
                    <th>
                        <a href="{{ path('cart_remove', {'id': item.outfit.id}) }}" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </a>
                    </th>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total :</td>
                <td>{{ total }}€</td>
            </tr>
            </tfoot>
        </table>
    {% else %}
        <p>Le panier est vide !</p>
    {% endif %}



{% endblock %}
