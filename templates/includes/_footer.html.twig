<!-- Footer -->
<footer class="footerCray page-footer bg-dark mt-5">


    <!-- Footer Links -->
    <div class="container text-center text-md-left mt-5">

        <!-- Grid row -->
        <div class="row mt-3">

            <!-- Grid column -->
            <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">

                <!-- Content -->
                <h6 class="text-uppercase font-weight-bold">A savoir</h6>
                <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                {% for text in aSavoir %}
                <p>{{ text.text }}</p>
                {% endfor %}

            </div>
            <!-- Grid column -->

            <!-- Grid column -->
            <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">

                <!-- Links -->
                <h6 class="text-uppercase font-weight-bold">Liens utiles</h6>
                <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                {% for social in social %}
                <p>
                    <a href="{{ social.facebook }}" target = "_blank">Facebook</a>
                </p>
                <p>
                    <a href="{{ social.instagram }}" target = "_blank">Instagram</a>
                </p>
                <p>
                    <a href="{{ social.linkedin }}" target = "_blank">Linkedin</a>
                </p>
                {% endfor %}

            </div>

            <!-- Grid column -->

        </div>
        <!-- Grid row -->

    </div>
    <!-- Footer Links -->

</footer>
