<div class="outfitContainer container-fluid mb-5">
    <div class="testdtm ">
        <div class="testdtm row">
            {% for outfit in outfits %}
                <div class="outfitCard card mt-5 container col-5">
                    <img class="card-img" src="{{ vich_uploader_asset (outfit, 'imageFile', 'App\\Entity\\Outfits') }}" alt="image">
                    <div class="card-body">
                        <p class="card-text">{{ outfit.description }}</p>
                        <a href="{{ path('outfits_Details', {id: outfit.id}) }}" class="btnOutfit btn">Voir !</a>
                    </div>
                </div>
            {% else %}
                <div class="card-body">Pas de collection disponible !</div>
            {% endfor %}
        </div>
    </div>
</div>
